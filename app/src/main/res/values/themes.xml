<resources>
    <style name="Theme.FilmSearch.New" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/new_theme_primary</item>
        <item name="colorPrimaryVariant">@color/new_theme_primary_variant</item>
        <!-- <item name="colorOnPrimary">@color/new_theme_on_primary</item> -->
        <item name="colorOnPrimary">@android:color/transparent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="BackgroundMainMenu">
        <item name="android:background">@drawable/main_menu_background</item>
    </style>

    <style name="ThemeBottomNavigation">
        <item name="android:background">@color/new_theme_on_primary</item>
        <item name="itemTextColor">@color/black</item>
        <item name="itemIconTint">@color/black</item>
    </style>

    <style name="FontFilmDescription">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="SettingsRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_marginStart">@dimen/settings_margin_radio_button</item>
        <item name="android:layout_marginEnd">@dimen/settings_margin_radio_button</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>