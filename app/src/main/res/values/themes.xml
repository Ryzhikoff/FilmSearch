<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FilmSearch.New" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/newTheme_Primary</item>
        <item name="colorPrimaryVariant">@color/newTheme_PrimaryVariant</item>
        <item name="colorOnPrimary">@color/newTheme_OnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Theme_Toolbar">
        <item name="android:background">@color/newTheme_OnPrimary</item>
        <item name="titleTextColor">@color/black</item>
        <item name="navigationIconTint">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="BackgroundMainMenu">
        <item name="android:background">@drawable/main_menu_background</item>
    </style>

    <style name="Theme_Bottomnavigation">
        <item name="android:background">@color/newTheme_OnPrimary</item>
        <item name="itemTextColor">@color/black</item>
        <item name="itemIconTint">@color/black</item>
    </style>
    
    <style name="ColorIcon">
        <item name="tint">@color/icon_color_toolbar</item>
    </style>

</resources>