<resources>
    <!-- Base application theme. -->
    <style name="Theme.FilmSearch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_theme_primary</item>
        <item name="colorPrimaryVariant">@color/dark_theme_primary_variant</item>
        <item name="colorOnPrimary">@color/dark_theme_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="ThemeToolbar">
        <item name="android:background">@color/black</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="BackgroundMainMenu">
        <item name="android:background">@drawable/main_menu_background_night</item>
    </style>

    <style name="ThemeBottomNavigation">
        <item name="android:background">@color/black</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
    </style>

    <style name="ColorIcon">
        <item name="tint">@color/icon_color_toolbar_night</item>
    </style>

    <style name="FontFilmDescription">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>